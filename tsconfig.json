{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "jsx": "react",
    "lib": ["dom", "esnext", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es2015",
    "paths": {
      "@components/*": ["src/components/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/*.ts", "./src/**/.tsx"],
  "exclude": ["node_modules/*", "public/*"]
}
